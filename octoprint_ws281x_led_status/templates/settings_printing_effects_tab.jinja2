        <input type="color" class="input-small" data-bind="value: settingsViewModel.settings.plugins.ws281x_led_status.effects.disconnected_color">
        <label class="inline"> Delay </label>
        <div class="input-append">
            <input type="number" step="0.1" class="input-small" data-bind="value: settingsViewModel.settings.plugins.ws281x_led_status.effects.disconnected.delay">
            <span class="add-on">ms</span>
        </div>
    </div>
<hr>
    <label class="checkbox inline">
        <input type="checkbox" data-bind="checked: settingsViewModel.settings.plugins.ws281x_led_status.effects.success.enabled">Enable print success effect
    </label>
    <div class="form-inline" data-bind="visible: settingsViewModel.settings.plugins.ws281x_led_status.effects.success.enabled">
    <label class="inline">Effect </label>
        <select class="input-large" data-bind="value: settingsViewModel.settings.plugins.ws281x_led_status.effects.success.effect">
            {% for effect in plugin_ws281x_led_status_standard_names %}
                <option value="{{ effect }}">{{ effect }}</option>
            {% endfor %}
        </select>
        <label class="inline"> Colour </label>
        <input type="color" class="input-small" data-bind="value: settingsViewModel.settings.plugins.ws281x_led_status.effects.success_color">
        <label class="inline"> Delay </label>
        <div class="input-append">
