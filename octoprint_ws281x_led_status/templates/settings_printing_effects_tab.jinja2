        </select>
        <label class="inline"> Colour </label>
        <input type="color" class="input-small" data-bind="value: settingsViewModel.settings.plugins.ws281x_led_status.effects.idle_color">
        <label class="inline"> Delay </label>
        <div class="input-append">
            <input type="number" step="0.1" class="input-small" data-bind="value: settingsViewModel.settings.plugins.ws281x_led_status.effects.idle.delay">
            <span class="add-on">ms</span>
        </div>
    </div>
<hr>
    <label class="checkbox inline">
        <input type="checkbox" data-bind="checked: settingsViewModel.settings.plugins.ws281x_led_status.effects.disconnected.enabled">Enable disconnected effect
    </label>
    <div class="form-inline" data-bind="visible: settingsViewModel.settings.plugins.ws281x_led_status.effects.disconnected.enabled">
